{
   "name":"WireGuard Client",
   "version":"0.1.8",
   "slug":"wireguard_client",
   "description":"Fast, modern, secure Wireguard tunnel (client)",
   "url":"https://github.com/bigmoby/addon-wireguard-client",
   "arch":[
      "aarch64",
      "amd64",
      "armhf",
      "armv7",
      "i386"
   ],
   "apparmor": true,
   "host_network": true,
   "init":false,
   "full_access": false,
   "ports":{
      "80/tcp": 80
   },
   "ports_description":{
      "80/tcp": "WireGuard client status API"
   },
   "hassio_api":true,
   "privileged":[
     "NET_ADMIN"
   ],
   "devices": ["/dev/net/tun"],
   "map":[
      "ssl:rw"
   ],
   "options":{
      "interface":{
         "private_key": "private-key-here",
         "address": "10.6.0.2"
      },
      "peers":[{
         "public_key": "",
         "pre_shared_key": "",
         "endpoint": "xxxxxx.duckdns.com",
         "allowed_ips":["10.6.0.0/24"]
      }]
   },
   "schema":{
      "log_level":"list(trace|debug|info|notice|warning|error|fatal)?",
      "interface":{
         "private_key": "password?",
         "address": "str",
         "dns":[
            "str?"
         ],
         "post_up": "str?",
         "post_down": "str?"
      },
      "peers": [{
         "public_key":"str?",
         "pre_shared_key":"str?",
         "endpoint":"str",
         "allowed_ips":[
            "str"
         ],
         "persistent_keep_alive":"int?"
      }]
   },
   "image": "bigmoby/{arch}-addon-wireguard-client"
 }
